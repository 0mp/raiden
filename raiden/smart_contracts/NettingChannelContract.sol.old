    function decode(bytes message) private {
        bytes32 hash;
        // Secret
        if (decideCMD(message) == 4) {
            assignSecret(message);
        }
        // Direct Transfer
        if (decideCMD(message) == 5) {
            hash = assignDirect1(message);
            assignDirect2(message, hash);
        }
        // Locked Transfer
        if (decideCMD(message) == 6) {
            hash = assignLocked1(message);
            assignLocked2(message, hash);
        }
        // Mediated Transfer
        if (decideCMD(message) == 7) {
            hash = assignMediated1(message);
            assignMediated2(message, hash);
        }
        // Cancel Transfer
        if (decideCMD(message) == 8) {
            hash = assignCancel1(message);
            assignCancel2(message, hash);
        }
        else throw;
    }

    function decideCMD(bytes message) private returns (uint number) {
        number = uint(message[0]);
    }

    function assignSecret(bytes message) private {
        uint i = atIndex(getter.getSender(message));
        var(sec, r, s, v) = dcdr.decodeSecret(message);
        participants[atIndex(msg.sender)].secret = sec;
        bytes32 h = sha3(sec);
        participants[i].sender = ecrecover(h, v, r, s);
    }
    function assignDirect1(bytes message) private returns (bytes32 hh) {
        uint i = atIndex(getter.getSender(message));
        var(cmd, non, ass, rec, trn) = dcdr.decodeTransfer1(message);
        participants[i].nonce = non;
        participants[i].asset = ass;
        participants[i].recipient = rec;
        participants[i].transferedAmount = trn;
        hh = sha3(cmd, non, ass, trn);
    }
    function assignDirect2(bytes message, bytes32 hh) private {
        bytes32 lock;
        uint i = atIndex(getter.getSender(message));
        var(loc, sec, r, s, v) = dcdr.decodeTransfer2(message);
        bytes32 h = sha3(hh, loc, sec);
        participants[i].sender = ecrecover(h, v, r, s);
    }
    function assignLocked1(bytes message) private returns (bytes32 hh) {
        uint i = atIndex(getter.getSender(message));
        var(non, exp, ass, rec) = dcdr.decodeLockedTransfer1(message);
        participants[i].nonce = non;
        lockedTime = exp;
        participants[i].asset = ass;
        participants[i].recipient = rec;
        hh = sha3(non, ass, rec);
    }
    function assignLocked2(bytes message, bytes32 hh) private {
        bytes32 lock;
        uint i = atIndex(getter.getSender(message));
        var(loc, trn, amo, has, r, s, v) = dcdr.decodeLockedTransfer2(message);
        participants[i].locksroot = loc;
        participants[i].transferedAmount = trn;
        participants[i].amount = amo;
        participants[i].hashlock = has;
        bytes32 h = sha3(hh, trn, loc, lock ); //need the lock
        participants[i].sender = ecrecover(h, v, r, s);
    }
    function assignMediated1(bytes message) private returns (bytes32 hh) {
        uint i = atIndex(getter.getSender(message));
        var(non, exp, ass, rec, tar, ini, loc) = dcdr.decodeMediatedTransfer1(message); 
        participants[i].nonce = non;
        lockedTime = exp;
        participants[i].asset = ass;
        participants[i].recipient = rec;
        participants[i].locksroot = loc;
        hh = sha3(non, ass, rec, tar, ini, loc);
    }
    function assignMediated2(bytes message, bytes32 hh) private {
        bytes32 lock;
        uint i = atIndex(getter.getSender(message));
        var(has, trn, amo, fee, r, s, v) = dcdr.decodeMediatedTransfer2(message);
        participants[i].hashlock = has;
        participants[i].transferedAmount = trn;
        participants[i].transferedAmount = amo;
        bytes32 h = sha3(hh, trn, lock, fee); //need the lock
        participants[i].sender = ecrecover(h, v, r, s);
    }
    function assignCancel1(bytes message) private returns (bytes32 hh) {
        uint i = atIndex(getter.getSender(message));
        var(non, exp, ass, rec) = dcdr.decodeCancelTransfer1(message);
        participants[i].nonce = non;
        lockedTime = exp;
        participants[i].asset = ass;
        participants[i].recipient = rec;
        hh = sha3(non, ass, rec);
    }
    function assignCancel2(bytes message, bytes32 hh) private {
        bytes32 lock;
        uint i = atIndex(getter.getSender(message));
        var(loc, trn, amo, has, r, s, v) = dcdr.decodeCancelTransfer2(message);
        participants[i].locksroot = loc;
        participants[i].transferedAmount = trn;
        participants[i].transferedAmount = amo;
        participants[i].hashlock = has;
        bytes32 h = sha3(hh, trn, loc, lock); //need the lock
        participants[i].sender = ecrecover(h, v, r, s);
    }

    function slice(bytes a, uint start, uint end) private returns (bytes n) {
        if (a.length < end) throw;
        if (start < 0) throw;
        if (start > end) throw;
        n = new bytes(end-start);
        for ( uint i = start; i < end; i ++) { //python style slice
            n[i-start] = a[i];
        }
    }

    /*[> HELPER FUNCTIONS <]*/
    function bytesToBytes32(bytes b, bytes32 i) private returns (bytes32 bts) {
        assembly { i := mload(add(b, 0x20)) }
        bts = i;
    }

    // empty function to handle wrong calls
    function () { throw; }
}
